# 应用配置
APP_NAME=Storybook Generator
APP_VERSION=1.0.0
DEBUG=True

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./storybook.db

# Dify配置
DIFY_API_KEY=your_dify_api_key_here
DIFY_BASE_URL=https://api.dify.ai/v1

# Dify工作流ID（需要在Dify中创建后填入）
DIFY_WORKFLOW_STAGE1=your_stage1_workflow_id
DIFY_WORKFLOW_STAGE2=your_stage2_workflow_id
DIFY_WORKFLOW_IMAGE_SELECTOR=your_image_selector_workflow_id

# 生图API配置（即梦）
JIMENG_API_KEY=your_jimeng_api_key_here
JIMENG_BASE_URL=https://api.jimeng.com

# 火山引擎配置
VOLCANO_API_KEY=your_volcano_api_key_here
VOLCANO_BASE_URL=https://api.volcengine.com

# Midjourney配置（可选）
MJ_API_KEY=your_mj_api_key_here
MJ_BASE_URL=https://api.midjourney.com

# 文件存储配置
STORAGE_PATH=./storage
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=txt,json

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
